<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#413e4f"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context=".activities.InfoProgramActivity">
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:gravity="center" >
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            android:backgroundTint="@color/colorPrimary"
            android:text="Update Info"
            android:textColor="@android:color/white" />
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollableContents"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatImageView
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/insan_kamil_logo"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Email :  "
                    android:textStyle="italic"
                    android:textSize="18dp"
                    android:textColor="@android:color/holo_blue_light"/>
                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textIsSelectable="true"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Telp :  "
                    android:textStyle="italic"
                    android:textSize="18dp"
                    android:textColor="@android:color/holo_blue_light"/>
                <TextView
                    android:id="@+id/textTelp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textIsSelectable="true"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Alamat :  "
                android:textStyle="italic"
                android:textSize="18dp"
                android:textColor="@android:color/holo_blue_light"/>
            <TextView
                android:id="@+id/textAlamat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="18dp"
                android:maxLines="6"
                android:textColor="@android:color/white"/>
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Profil PSAA Insan Kamil :  "
                android:textStyle="italic"
                android:textSize="18dp"
                android:textColor="@android:color/holo_blue_light"/>
            <TextView
                android:id="@+id/textProfil"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="18dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Visi :  "
                android:textStyle="italic"
                android:textSize="18dp"
                android:textColor="@android:color/holo_blue_light"/>
            <TextView
                android:id="@+id/textVisi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="18dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Misi :  "
                android:textStyle="italic"
                android:textSize="18dp"
                android:textColor="@android:color/holo_blue_light"/>
            <TextView
                android:id="@+id/textMisi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:text="-"
                android:textSize="18dp"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:text="Kembali"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>